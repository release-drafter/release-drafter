{
	"name": "@release-drafter/core",
	"version": "6.0.0-beta.1",
	"description": "Core library used to draft releases based on pull-request labels",
	"exports": {
		".": "./dist/index.js",
		"./package.json": "./package.json"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"clean": "rimraf dist",
		"test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest"
	},
	"keywords": [],
	"author": {
		"name": "Tim Lucas",
		"email": "t@toolmantim.com",
		"url": "https://github.com/toolmantim"
	},
	"contributors": [
		{
			"name": "Joseph Petersen",
			"email": "me@jetersen.dev",
			"url": "https://jetersen.dev"
		}
	],
	"license": "ISC",
	"engines": {
		"node": ">=16.0.0"
	},
	"dependencies": {
		"@octokit/core": "^4.0.4",
		"@octokit/graphql": "^5.0.0",
		"@octokit/plugin-paginate-rest": "^3.1.0",
		"@octokit/plugin-rest-endpoint-methods": "^6.2.0",
		"@octokit/plugin-throttling": "^4.2.0",
		"@probot/octokit-plugin-config": "^1.1.6",
		"cli-table3": "0.6.2",
		"compare-versions": "4.1.3",
		"deepmerge": "4.2.2",
		"escape-string-regexp": "4.0.0",
		"ignore": "5.2.0",
		"lodash": "^4.17.21",
		"regex-parser": "2.2.11",
		"semver": "7.3.7",
		"zod": "^3.17.10"
	},
	"publishConfig": {
		"access": "public"
	},
	"tsup": {
		"clean": true,
		"dts": "./src/index.ts",
		"entry": [
			"./src/index.ts"
		],
		"format": [
			"esm"
		],
		"outDir": "./dist",
		"sourcemap": false,
		"target": "es2022"
	}
}
