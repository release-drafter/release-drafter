{
  "name": "release-drafter",
  "description": "Drafts your next release notes as pull requests are merged into your branch(es).",
  "version": "0.0.0",
  "author": "",
  "type": "module",
  "private": true,
  "homepage": "https://github.com/release-drafter/release-drafter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/release-drafter/release-drafter.git"
  },
  "bugs": {
    "url": "https://github.com/release-drafter/release-drafter/issues"
  },
  "keywords": [
    "actions",
    "release",
    "release-notes",
    "release-automation"
  ],
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "build": "vite build",
    "test": "vitest",
    "test:run": "vitest run",
    "ci-test": "vitest",
    "coverage": "npx make-coverage-badge --output-path ./badges/coverage.svg",
    "local-action": "npx @github/local-action . src/main.ts .env",
    "tsc:check": "tsc --noEmit",
    "format:write": "npx prettier --write .",
    "format:check": "npx prettier --check .",
    "lint": "npx eslint .",
    "all": "npm run format:write && npm run lint && npm run test && npm run coverage && npm run build"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "compare-versions": "^4.1.3",
    "escape-string-regexp": "^5.0.0",
    "lodash": "^4.17.21",
    "regex-parser": "^2.3.1",
    "yaml": "^2.8.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@github/local-action": "^6.0.2",
    "@octokit/webhooks-types": "^7.6.1",
    "@types/lodash": "^4.17.23",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/eslint-plugin": "^1.6.6",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "make-coverage-badge": "^1.2.0",
    "nock": "^14.0.10",
    "prettier": "^3.7.4",
    "prettier-eslint": "^16.4.2",
    "rollup-plugin-copy": "^3.5.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.18"
  }
}
