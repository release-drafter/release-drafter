{
	"name": "@release-drafter/mono",
	"type": "module",
	"description": "A GitHub app that draft releases based on pull-request labels",
	"private": true,
	"author": {
		"name": "Tim Lucas",
		"email": "t@toolmantim.com",
		"url": "https://github.com/toolmantim"
	},
	"contributors": [
		{
			"name": "Joseph Petersen",
			"email": "me@jetersen.dev",
			"url": "https://jetersen.dev"
		}
	],
	"license": "ISC",
	"repository": "https://github.com/release-drafter/release-drafter",
	"workspaces": [
		"packages/*"
	],
	"engines": {
		"node": ">=16.0.0"
	},
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"build": "pnpm -r --filter=./packages/* run build",
		"test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"prettier": "prettier",
		"prettier:check": "prettier --check .",
		"prettier:fix": "prettier --write .",
		"postversion": "pnpm run test && git push && git push --tags",
		"prepare": "husky install"
	},
	"devDependencies": {
		"@types/jest": "^28.1.6",
		"@types/node": "^16.0.0",
		"@typescript-eslint/eslint-plugin": "^5.31.0",
		"@typescript-eslint/parser": "^5.31.0",
		"cross-env": "^7.0.3",
		"eslint": "8.20.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-prettier": "4.2.1",
		"eslint-plugin-unicorn": "^43.0.2",
		"husky": "8.0.1",
		"jest": "^28.1.3",
		"lint-staged": "12.5.0",
		"micromatch": "^4.0.5",
		"prettier": "2.7.1",
		"ts-jest": "^28.0.7",
		"ts-node": "^10.9.1",
		"typescript": "^4.7.4"
	}
}
