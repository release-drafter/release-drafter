{
	"name": "@release-drafter/monorepo",
	"version": "6.0.0-beta.1",
	"type": "module",
	"private": true,
	"packageManager": "pnpm@7.9.5",
	"workspaces": [
		"packages/*"
	],
	"engines": {
		"node": ">=16.0.0"
	},
	"scripts": {
		"build": "pnpm -r --filter=./packages/* --stream build",
		"clean": "pnpm --parallel --stream clean",
		"test": "jest",
		"lint": "eslint .",
		"lint:fix": "eslint --fix .",
		"prettier": "prettier",
		"prettier:check": "prettier --check .",
		"prettier:fix": "prettier --write .",
		"prepare": "husky install",
		"release": "pnpm release:check && pnpm release:version",
		"release:check": "pnpm lint && pnpm clean && pnpm build && pnpm test",
		"release:version": "bumpp package.json packages/*/package.json --commit \"build: publish v%s\""
	},
	"devDependencies": {
		"@jest/globals": "^29.0.1",
		"@octokit/types": "^7.1.1",
		"@octokit/webhooks-types": "^6.3.6",
		"@swc/core": "^1.2.244",
		"@swc/jest": "^0.2.22",
		"@types/jest": "^28.1.6",
		"@types/lodash": "^4.14.184",
		"@types/node": "^16.0.0",
		"@types/semver": "^7.3.12",
		"@typescript-eslint/eslint-plugin": "^5.31.0",
		"@typescript-eslint/parser": "^5.31.0",
		"@vercel/ncc": "^0.34.0",
		"bumpp": "^8.2.1",
		"eslint": "8.20.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-plugin-jest": "^26.8.2",
		"eslint-plugin-prettier": "4.2.1",
		"eslint-plugin-unicorn": "^43.0.2",
		"husky": "8.0.1",
		"jest": "^28.1.3",
		"lint-staged": "12.5.0",
		"micromatch": "^4.0.5",
		"nock": "^13.2.9",
		"prettier": "2.7.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^28.0.7",
		"ts-node": "^10.9.1",
		"tsup": "^6.2.3",
		"typescript": "^4.7.4"
	}
}
