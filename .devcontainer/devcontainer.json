{
  "name": "Node.js",
  /**
   * Debian-based image with oh-my-zsh, eslint and nvm (in case you need to use a different version of Node.js)
   * @see https://github.com/devcontainers/images/tree/main/src/javascript-node
   */
  "image": "mcr.microsoft.com/devcontainers/javascript-node:20",
  "postCreateCommand": "yarn install",
  "customizations": {
    "vscode": {
      "extensions": ["prettier.prettier-vscode", "dbaeumer.vscode-eslint"]
    }
  },
  "mounts": [
    /**
     * Mount local ssh keys such as container's git may use ssh commit signing
     */
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.ssh,target=/home/node/.ssh,type=bind,consistency=cached"
  ]
}
