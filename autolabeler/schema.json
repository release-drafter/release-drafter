      "items": {
        "type": "object",
        "properties": {
          "label": { "type": "string", "minLength": 1 },
          "files": {
            "default": [],
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "branch": {
            "default": [],
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "title": {
            "default": [],
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "body": {
            "default": [],
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          }
        },
        "required": ["label", "files", "branch", "title", "body"],
        "additionalProperties": false
      }
    }
  },
  "required": ["autolabeler"],
  "additionalProperties": false,
  "title": "JSON schema for Release Drafter's autolabeler action config.",
